@model IEnumerable<LaEsperanza.WEB.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

    <h2>
        Suplidor     <a class="btn btn-warning" asp-action="Create">Agregar</a>
    </h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.SupplierId">Editar</a> |
                <a class="btn btn-dark" asp-action="Details" asp-route-id="@item.SupplierId">Detalles</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.SupplierId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
