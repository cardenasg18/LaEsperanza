@model LaEsperanza.WEB.Models.Product

@{
    ViewData["Title"] = "Create";
}



<h2>Inventario</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Retiro" class="control-label"></label>
                <input asp-for="Retiro" class="form-control" />
                <span asp-validation-for="Retiro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceP" class="control-label"></label>
                <input asp-for="PriceP" class="form-control" />
                <span asp-validation-for="PriceP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
