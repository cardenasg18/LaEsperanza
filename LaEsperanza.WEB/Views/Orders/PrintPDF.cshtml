@model LaEsperanza.WEB.ViewModels.OrderView

@{
    ViewData["Title"] = "Order";
    var id = Model.Order.OrderId;
    Layout = null;
}

<head>
    <!-- Custom fonts for this template-->
    <link href="~/startbootstrap-sb-admin-2-gh-pages/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!--<link href="vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">-->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/startbootstrap-sb-admin-2-gh-pages/css/sb-admin-2.min.css" rel="stylesheet">
</head>
<div class="wrapper">
    <section class="invoice">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="page-header" style="marker-mid">

                    <div class="sidebar-brand-icon rotate-n-15">
                        <svg class="bi bi-cart4" width="2.5em" height="1.7em" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="20" height="18"><path fill-rule="evenodd" d="M7.655 14.916L8 14.25l.345.666a.752.752 0 01-.69 0zm0 0L8 14.25l.345.666.002-.001.006-.003.018-.01a7.643 7.643 0 00.31-.17 22.08 22.08 0 003.433-2.414C13.956 10.731 16 8.35 16 5.5 16 2.836 13.914 1 11.75 1 10.203 1 8.847 1.802 8 3.02 7.153 1.802 5.797 1 4.25 1 2.086 1 0 2.836 0 5.5c0 2.85 2.045 5.231 3.885 6.818a22.075 22.075 0 003.744 2.584l.018.01.006.003h.002z"></path></svg>
                        </svg>
                    </div>
                    <div class="text-dark font-weight-bold" style="text-align: left">-  La Esperanza</div>

                </h2>
            </div>
        </div>
        <div class="row invoice-info">
            <div class="col-sm-12 invoice-col" style=" text-align: right;">
                <address>
                    Los Ríos, Calle segunda #15<br>
                    Santo Domingo, D.N.<br>
                    Telefono: (829) 721-9160<br>
                    Email: doc.everythings@gmail.com
                </address>
            </div>
        </div>
    </section>
</div>
<hr />
<div class="clearfix"></div>
<div class="row">
    <div class="col-sm-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h2> Orden: @Html.DisplayFor(model => model.Order.OrderId)</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <div class="article form-group">
                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                        Suplidor
                    </label>
                    <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                        @Html.DisplayFor(model => model.Order.Supplier.SupplierName)
                    </div>
                </div>
                <div class="article form-group">

                    <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">
                        @Html.DisplayNameFor(model => model.Order.OrderTime)
                    </label>
                    <div class="col-md-6 col-sm-6 form-control" style="background-color: ivory; ">
                        @Html.DisplayFor(model => model.Order.OrderTime)
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <table id="grid" name="grid" class=" table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Cantidad</th>
                                        <th>Precio unitario</th>
                                        <th>Precio total</th>
                                    </tr>
                                </thead>
                                <tbody class="data">
                                    @foreach (var article in Model.Details)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => article.Item.ItemName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => article.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => article.UnitPrice)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => article.TotalValue)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.SubTotal)</td>
                                        <td style="text-align:right;" class="valorsub">@Html.DisplayFor(Model => Model.Order.SubTotal)</td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.Valueimp)</td>
                                        <td style="text-align:right;" class="valori">@Html.DisplayFor(Model => Model.Order.Valueimp) </td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" style="text-align:right;">@Html.DisplayNameFor(Model => Model.Order.TotalValue)</td>
                                        <td style="text-align:right;" class="valort">@Html.DisplayFor(Model => Model.Order.TotalValue)</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    $(document).ready(function () {
        window.print()
        window.onfocus = function () { window.close() }
    });
</script>
