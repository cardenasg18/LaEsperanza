@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    #botones {
        margin-top: 2px;
    }
</style>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul id="botones" class="nav navbar-nav navbar-right">
            <li>
                <a class="btn btn-success" title="Manage">Hola @UserManager.GetUserName(User)!</a>
            </li>

            <li>
                <button type="submit" style="margin-left:8px;" class="btn btn-danger navbar-btn navbar-link">Desconectarse</button>
            </li>

        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a id="botones" style="margin-right:8px;" class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">Registrarse</a></li> 
        <li><a id="botones" class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}