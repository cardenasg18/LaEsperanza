@model IEnumerable<LaEsperanza.WEB.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

    <h2>
        Formas de pago     <a class="btn btn-warning" asp-action="Create">Agregar</a>
    </h2>

<p>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pway)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pway)
            </td>
