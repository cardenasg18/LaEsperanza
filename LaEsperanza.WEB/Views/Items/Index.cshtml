@model IEnumerable<LaEsperanza.WEB.Models.Item>

@{
    ViewData["Title"] = "Index";
}


    
        <h2>
            Inventario         <a class="btn btn-warning" asp-action="Create">Agregar</a>
        </h2>
    
<table class="table">
    <thead>
        <tr>
            <th>
                Clasificación
                @*@Html.DisplayNameFor(model => model.Clasification)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemName)
            </th>
            <th>
                Presentación
                @*@Html.DisplayNameFor(model => model.Unit)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lote)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>*@
            @*<th>
                Suplidor
                @Html.DisplayNameFor(model => model.Supplier)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Clasification.ItemType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lote)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>*@
            @*<td>
                @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
            </td>*@
            <td>
                <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.ItemId">Editar</a> |
                <a class="btn btn-dark btn-sm" asp-action="Details" asp-route-id="@item.ItemId">Detalles</a> |
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ItemId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
